<div>
  <% @tweets.reverse.each do |tweet| %>
    <tr>
      <h1><td><%= tweet.user.email %></td></h1>
      <h2><td><%= tweet.body %> <% if current_user == tweet.user %>
          <%= button_to "Delete", tweet_path(tweet.id), :confirm => "Are you sure?", method: :delete %>
        <% end %></td></h2>
      <h3><td><%= tweet.created_at %></td></h3>
    </tr>
  <% end %>
</div>
 
<%= link_to 'New Tweet', new_tweet_path(@user) %>
